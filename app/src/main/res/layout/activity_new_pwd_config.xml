<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w"
    android:orientation="vertical">

    <TextView
        style="@style/text2"
        android:text="总标题 ： " />

    <EditText
        android:id="@+id/etTitle"
        style="@style/edittext2"
        android:hint="请输入标题" />

    <TextView
        style="@style/text2"
        android:text="加密文件的密码 ： " />

    <EditText
        android:id="@+id/etPWD"
        style="@style/edittext2"
        android:hint="请输入密码" />

    <LinearLayout
        android:id="@+id/llPicPath"
        style="@style/setting_item"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秘密图片保存路径"
                android:textColor="@color/b" />

            <TextView
                android:id="@+id/tvPicPath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="秘密图片保存路径"
                android:textColor="@color/textGrey"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/akd" />

    </LinearLayout>

    <TextView
        style="@style/text2"
        android:text="保存的文件名字 ： " />

    <EditText
        android:id="@+id/etFileName"
        style="@style/edittext2"
        android:hint="请输入保存的文件名字" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btNew"
        style="@style/button_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="创建" />
</LinearLayout>